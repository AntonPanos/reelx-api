{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/config": ["config/index"],
      "@/config/*": ["config/*"],
      "@/controllers": ["api/controllers/index"],
      "@/controllers/*": ["api/controllers/*"],
      "@/helpers": ["api/helpers/index"],
      "@/helpers/*": ["api/helpers/*"],
      "@/interfaces/*": ["api/interfaces/*"],
      "@/library/*": ["api/library/*"],
      "@/middleware/*": ["api/middleware/*"],
      "@/models": ["api/models/index"],
      "@/models/*": ["api/models/*"],
      "@/routes": ["api/routes/index"],
      "@/routes/*": ["api/routes/*"],
      "@/utils/*": ["api/utils/*"],
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
